{% extends "admin/adminLayout.njk" %}

{% block head %}
  <title>Foodfy Admin - Criando receita</title>
{% endblock %}

{% block adminContent %}
  <section class="recipesList adminRecipe">
    <div class="formRecipe">
      <fieldset>
        <legend>Editando receita</legend>
        <form class="fields" action="/admin/recipes?_method=PUT" method="POST" enctype="multipart/form-data">

          {% include 'admin/templates/includes/recipes-fields.njk'%}

          <input type="hidden" name="id" value="{{recipe.id}}">

          <button class="btn" type="submit">Salvar receita</button>
        </form>

        <form action="/admin/recipes?_method=DELETE" method="POST">
          <input type="hidden" name="id" value="{{recipe.id}}">
          <button class="btn" id="deleteButton" type="submit">Deletar receita</button>
        </form>
      </fieldset>
    </div>
  </section>
  {% endblock%}

  {% block scripts %}
    <script src="../../../js/script.js"></script>
  {% endblock %}