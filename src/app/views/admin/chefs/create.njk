{% extends "admin/adminLayout.njk" %}

{% block head %}
  <title>Foodfy Admin - Novo Chef</title>
  <link rel="stylesheet" href="/css/adminStyle.css">
  <link rel="stylesheet" href="/css/partials/form.css">
  <link rel="stylesheet" href="/css/partials/components.css">
{% endblock %}

{% block adminContent %}
  <section class="chefsList adminRecipe">
    <div class="formRecipe createPage">
      <fieldset>
        <div class="formHeader">
          <legend>Criando chef
          </legend>
          <button form="createChef" class="btn" type="submit">Salvar Chef</button>
        </div>
        <form id="createChef" action="/admin/chefs" method="POST" enctype="multipart/form-data">

          <div class="inputBlock">
            <label for="name">Nome</label>
            <input type="text" name="name" id="name" value="{{chef.name}}">
          </div>

          <div class="inputBlock">
            <label for="photos">Avatar</label>
            <div class="container">
              <div id="photosUpload">
                <label class="btn" for="photos">Enviar Avatar</label>
                <input type="file" name="photos" id="photosInput" multiple="multiple" accept="image/*" {% if not file %} required="required" {% endif %} onchange="PhotosUpload.handleFileInput(event, 1)">
              </div>
              <div id="photosPreview">
                {% if file %}
                  <div class="photo" id="{{file.id}}">
                    <img src="{{file.src}}" alt="{{file.name}}">
                    <i class="material-icons" onclick="PhotosUpload.removeOldPhoto(event)">close</i>
                  </div>

                  <input type="hidden" name="removedFiles">
                  <input type="hidden" name="file_id" value="{{file.id}}">
                {% endif %}
              </div>
            </div>
          </div>

        </form>
      </fieldset>
    </div>
  </section>
  {% endblock%}