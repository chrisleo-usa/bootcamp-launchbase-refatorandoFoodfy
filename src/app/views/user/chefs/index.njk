{% extends "user/layout.njk" %}

{% block head %}
  <title>FoodFy - Lista de Chefs</title>
  <link rel="stylesheet" href="/css/adminStyle.css">
{% endblock %}

{% block content %}
  <section class="chefsList">

    <div class="chefsCards">
      {% for chef in chefs %}
        <div class="card">
          <div class="cardImg">
            <img src="{{chef.image}}" alt="{{chef.name}}">
          </div>
          <div class="cardContent">
            <p>{{chef.name}} <br>
              <span>{{chef.total_recipes}} {{'receitas' if chef.total_recipes > 1 else 'receita'}}</span>
            </p>
          </div>
        </div>
      {% endfor %}
    </div>
  </section>
{% endblock %}
