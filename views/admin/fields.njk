<section class="recipesList adminRecipe">
  <div class="formRecipe">
    <fieldset>
      <legend>Criando receita
        <a type="submit" href="/admin/{{recipes.id}}/edit">Salvar receita</a>
      </legend>
      <form action="">
        <div class="inputBlock">
          <label for="image">Imagem da receita</label>
          <input type="url" name="image" id="image">
        </div>

        <div class="inputBlock">
          <label for="ingredients">Ingredientes</label>
          <input type="text" name="ingredients" id="ingredients">
          <a href="">Adicionar novo ingrediente</a>
        </div>

        <div class="inputBlock">
          <label for="prepare">Modo de preparo</label>
          <input type="text" name="prepare" id="prepare">
          <a href="">Adicionar novo passo</a>
        </div>

        <div class="textAreaBlock">
          <label for="textArea">Informações adicionais</label>
          <textarea name="textArea" id="textArea" cols="30" rows="10"></textarea>
        </div>
      </form>
    </fieldset>
  </div>
</section>