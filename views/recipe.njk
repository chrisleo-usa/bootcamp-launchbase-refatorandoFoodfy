{% extends "layout.njk" %}

{% block head %}
  <title>Receita do {{recipes.title}}</title>
{% endblock %}

{% block content %}
<div class="recipe">
  <div class="container">
    <div class="recipeBanner">
      <div class="foodImg " style="background-image: url({{recipes.image}})">
      </div>

      <div class="title">
        <p>{{recipes.title}} <br> <span>{{recipes.author}}</span></p>
      </div>
    </div>

    <div class="recipeContent">
      <div class="recipeInfo">
        <div class="recipeInfoTitle">
          <h3>Ingredientes</h3>
          <a class="button">esconder</a>
        </div>
        <ul class="content show">
          {% for recipe in recipes.ingredients %}
            <li>{{recipe}}</li>
          {% endfor %}
        </ul>
      </div>

      <div class="recipeInfo">
        <div class="recipeInfoTitle">
          <h3>Modo de preparo</h3>
          <a class="button">esconder</a>
        </div>
        <ul class="content show">
          {% for recipe in recipes.preparation %}
            <li>{{recipe}}</li>
          {% endfor %}
        </ul>
      </div>

      <div class="recipeInfo">
        <div class="recipeInfoTitle">
          <h3>Informações adicionais</h3>
          <a class="button">esconder</a>
        </div>

        <p class="content show">{{recipes.information}}</p>
      </div>
    </div>
  </div>
</div>

{% endblock %}